    "version": "0.2.0",
    "configurations": [
        {
            "name": "현재파일",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd" : "${fileDirname}",
            "justMyCode": false,
            // "env": {"PYTHONPATH": "${workspaceFolder}"}       
        },
        {
            "name": "Api-Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.kalpadb-api-main:app",
                "--reload",
                "--port", 
                "8088" // 원하는 포트 번호로 변경
            ],
            "jinja": true,
            "justMyCode": true,
            // "console": "integratedTerminal"
            "console": "externalTerminal",
            //"python": "c:\\Users\\deHong\\Python312\\python"
        }
    ]
}